{
  "compilerOptions": {
    "module": "CommonJS",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "target": "ES6",
    "moduleResolution": "node",
    "strict": true,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types"],
    "outDir": "./dist"
  },
  "include": ["src/**/*"]
}
